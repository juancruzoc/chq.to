<div>
    <div id="short_link">
        <div class="flex items-center text-center justify-center">
            <table class="table-fixed w-4/6 bg-white-500 border-collapse border-spacing-1 border-collapse border border-slate-500 mt-2">
                <thead class="bg-sky-400">
                <tr>
                    <th class="border border-slate-600">Short Url</th>
                    <th class="border border-slate-600">Url</th>
                    <th class="border border-slate-600">Expiration Date</th>
                    <th class="border border-slate-600">Password</th>
                    <th class="border border-slate-600">Usages</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="border border-slate-700">
                            <%= link_to "http://chq.to/l/" + @short_link.short_url, "http://127.0.0.1:3000/l/" + @short_link.short_url, class: "text-sky-700 hover:underline hover:text-sky-900" %>
                        </td>
                        <td class="border border-slate-700">
                            <%= link_to @short_link.url, @short_link.url, class: "text-sky-700 hover:underline hover:text-sky-900" %>
                        </td>
                        <td class="border border-slate-700">
                            <%= @short_link.expiration_date ? @short_link.expiration_date : "N/A"%>
                        </td>
                        <td class="border border-slate-700">
                            <%= @short_link.password != "" ? @short_link.password : "N/A"%>
                        </td>
                        <td class="border border-slate-700">
                            <%= @short_link.usages ? @short_link.usages : "N/A"%>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="flex items-center text-center justify-center mt-4">
        <%= button_to "Edit", edit_short_link_path(@short_link), method: :get, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded m-2" %>
        <%= button_to "Back", root_path, method: :get, class: "bg-sky-500 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded m-2" %>

        <%= button_to "Delete", @short_link, method: :delete, class: "bg-rose-500 hover:bg-rose-700 text-white font-bold py-2 px-4 rounded m-2" %>
    </div>
</div>
