<tr>
  <td class="border border-slate-700">
    <%= link_to "http://chq.to/l/" + short_link.short_url, "http://127.0.0.1:3000/l/" + short_link.short_url, class: "text-sky-700 hover:underline hover:text-sky-900", target: :_blank %>
  </td>
  <td class="border border-slate-700">
    <%= link_to short_link.url, short_link.url, class: "text-sky-700 hover:underline hover:text-sky-900", target: :_blank %>
  </td>
  <td class="border border-slate-700">
    <%= short_link.expiration_date ? short_link.expiration_date.to_date : "N/A"%>
  </td>
  <td class="border border-slate-700">
    <%= short_link.password != "" ? short_link.password : "N/A"%>
  </td>
  <td class="border border-slate-700">
    <%= short_link.usages ? short_link.usages : "N/A"%>
  </td>
  <td class="border border-slate-700">        
    <%= button_to "Show", short_link, method: :get, class: "bg-sky-500 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded" %>
  </td>
</tr>