<div class="w-full max-w-xs">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"block text-gray-700 text-sm font-bold mt-4" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow appearance-none border rounded text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"block text-gray-700 text-sm font-bold mt-4" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"shadow appearance-none border rounded text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
