<div>

<% if user_signed_in? %>
    <p style="color: green"><%= notice %></p>

    <h1 class="text-3xl font-bold underline">Short links</h1>

    <div id="short_links">
    <% @short_links.each do |short_link| %>
        <%= render short_link %>
        <br>
        <p>
        <%= button_to "Show", short_link, method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>    
        </p>
    <% end %>
    </div>
    <br>
    <%= button_to "New", new_short_link_path, method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>

</div>